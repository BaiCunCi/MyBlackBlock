/* components/button/index.wxss */
.i-btn{
  position: relative;
  height: 88rpx;
  border-radius: 2rpx;
  border: 0 !important;
  color:rgb(48, 24, 54) !important;
  background: #f7f7f7 !important;
  margin: 20rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  white-space: nowrap;
  user-select: none;
  text-decoration: none;
  box-shadow: inset 0 0 0 5rpx rgba(0,0,0,0.1);

}

.i-btn-hover{
  opacity: 0.8;
}

.i-btn-long{
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}

.i-btn-large{
  height: 96rpx;
  line-height: 96rpx;
}

.i-btn-small{
  height: 80rpx;
  line-height: 80rpx;

}

.i-btn-primary{
  color: #fff !important;
  background: #2d8cf0 !important;

}
.i-btn-ghost{
  color: #495060 !important;
  background: #fff !important;

}

.i-btn-info{
  color: #fff !important;
  background: #69C3AA !important;

}
.i-btn-success{
  color: #fff !important;
  background: #19be6b !important;
}
.i-btn-warning{
  color: #fff !important;
  background: #ed3f14 !important;
}

.i-btn-large.i-btn-circle{
  border-radius: 96rpx;
}
.i-btn-small.i-btn-circle{
  border-radius: 80rpx;
}
/* 制灰 */
.i-btn-disabled{
  color: #bbbec4 !important;
  background: #f7f7f7 !important;
}

/*  */
.i-btn-inline{
  display: inline-block;
}

/* 加载 */
.i-btn-loading{
  opacity: 0.6;
}
.i-btn-loading-inner{
  display: inline-block;
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  animation:  btn-spin 0.6s linear infinite;
  margin-right: 24rpx;
}
@keyframes btn-spin{
  0%{transform: rotate(0)}
  100%{transform: rotate(360deg)}
}